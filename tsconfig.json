{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": ["es5", "es2015.promise", "dom", "es2015", "es6"],
        "sourceMap": true,
        "rootDir": "src",
        "resolveJsonModule": true,
        "strict": false,
        "suppressImplicitAnyIndexErrors": true,
        "watch": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}